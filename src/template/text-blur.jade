doctype html
html(lang='zh-TW')
    head
        include ../partials/head
    body 
      
        include ../partials/header
        main
            section.section
                .container
                    h1.text-blur(role='button')
                        span.default BR
                        span.hover TH
                        | IEF

        include ../partials/footer
    script(src="/js/app.js")
    script.
        let text = document.querySelector('.text-blur');
        text.addEventListener('mouseover', (e) => {
            text.classList.add('is-hover');
        })
        text.addEventListener('hover', (e) => {
            text.classList.add('is-hover');
        })

        text.addEventListener('mouseleave', (e) => {
            text.classList.remove('is-hover');
            text.classList.add('is-leaving');
            setTimeout(() => {
                text.classList.remove('is-leaving');
            }, 1000)
        })
        text.addEventListener('blur', (e) => {
            text.classList.remove('is-hover');
            text.classList.add('is-leaving');
            setTimeout(() => {
                text.classList.remove('is-leaving');
            }, 1000)
        })