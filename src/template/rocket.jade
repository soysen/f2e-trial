doctype html
html(lang='zh-TW')
    head
        include ../partials/head
    body 
      audio#bg-sound(autoplay loop) 
        source(src="../audio/Space_Oddity.mp3")
      audio#start-sound 
        source(src="../audio/start.mp3")
      audio#finish-sound 
        source(src="../audio/finish.mp3")
      
      include ../partials/header
      
      main(style="padding-top: 0;")
        canvas#rocket
        
        #start-layer.layer.hidden
          h1.title.is-1 SPACE ODDITY
          .note 
            .left
              h3.title.is-5 SPEED UP/DOWN
              div.box W
              div.box 
                .fa.fa-arrow-up
              br
              div.box S
              div.box 
                .fa.fa-arrow-down
            .right 
              h3.title.is-5 ROTATE LEFT/RIGHT
              div.box A
              div.box D
              br
              div.box
                .fa.fa-arrow-left
              div.box
                .fa.fa-arrow-right
          button#start.button.is-info.is-large.is-inverted.is-outlined START

        #finish-layer.layer.hidden
          h1.title.is-1 You're dead, major Tom.<br/>
            small you fly 
              span#final-score 0
              |  light year away.
          button#restart.button.is-info.is-large.is-inverted.is-outlined PLAY AGAIN
      
        //- include ../partials/footer

      script(src="../js/app.js")
      script(src="../js/rocket.js")
      script.
        $('header nav.navbar').addClass('inverse');